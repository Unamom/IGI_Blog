@using Blog.Models;

@helper Render(User user, System.Web.Mvc.HtmlHelper html)
{
     <tr><td>@user.ID</td><td>@user.Name @user.Lastname</td><td>@if(user.UserGroup == 1){ <span style="color: red">Администратор</span> } else { <span>Пользователь</span> }</td>
     <td>
        <div>
            <a href="@Href("~/AdminPanel/DeleteUser/" + user.ID)" class="actions_ic ic_del"></a>
            <a href="@Href("~/AdminPanel/EditUser/" + user.ID)" class="actions_ic ic_edit"></a>
       </div>
     </td>
     </tr>
}

