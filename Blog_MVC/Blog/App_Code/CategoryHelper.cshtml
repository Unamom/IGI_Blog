@using Blog.Models;

@helper Render(Category category, System.Web.Mvc.HtmlHelper html)
{
     <tr><td>@category.ID</td><td>@category.Name</td>
     <td>
        <div>
            <a href="@Href("~/Categories/Delete/" + category.ID)" class="actions_ic ic_del"></a>
            <a href="@Href("~/Categories/Edit/" + category.ID)" class="actions_ic ic_edit"></a>
       </div>
     </td>
     </tr>
}

